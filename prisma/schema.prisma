generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    Int    @id @default(autoincrement())
  fullname String @db.VarChar(100)
  email String @unique
  username  String @unique @db.VarChar(50)
  password String @db.VarChar(255)
  bio String? @db.VarChar(255)
  image String? @db.VarChar(255)
  imageId String? @db.VarChar(255)
  followingCount Int @db.Integer @default(0)
  followerCount Int @db.Integer @default(0)
  postCount Int @db.Integer @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts Post[]
  comments Comment[]
  bookmarks Bookmark[]
  likes Likes[]
  followers Follow[] @relation("Followers")
  followings Follow[] @relation("Followings")
}

model Post {
  id    Int    @id @default(autoincrement())
  userId Int
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  image String @db.VarChar(255)
  imageId String @db.VarChar(255)
  caption String? @db.VarChar(255)
  commentCount Int @db.Integer @default(0)
  likeCount Int @db.Integer @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments Comment[]
  likes Likes[]
  bookmarks Bookmark[]
}

model Comment {
  id    Int    @id @default(autoincrement())
  userId Int
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId Int
  post  Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  content String @db.VarChar(255)
  createdAt DateTime @default(now())
}

model Bookmark {
  userId Int
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId Int
  post  Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@id([userId, postId])
}
model Likes {
  userId Int
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId Int
  post  Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@id([userId, postId])
}

model Follow {
  followerId Int
  follower   User @relation("Followers", fields: [followerId], references: [id])

  followingId Int
  following  User @relation("Followings", fields: [followingId], references: [id])

  createdAt DateTime @default(now())

  @@id([followerId, followingId])
}
